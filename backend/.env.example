# Variables de entorno para el backend

# Base de datos Neon PostgreSQL
# Obtén esta URL desde tu dashboard de Neon
DATABASE_URL=postgresql://username:password@ep-xxxx-xxxx.region.aws.neon.tech/dbname?sslmode=require

# Configuración del servidor
PORT=5000
NODE_ENV=development

# JWT Secret (genera una clave segura)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=


# Variables opcionales para desarrollo local
# (Si usas la URL completa arriba, estas no son necesarias)
# DB_USER=username
# DB_HOST=ep-xxxx-xxxx.region.aws.neon.tech
# DB_DATABASE=dbname
# DB_PASSWORD=password
# DB_PORT=5432

# Email Service (Resend)
# Obtén esta clave desde tu dashboard de Resend
#RESEND_API_KEY=re_xxxxxxxx_xxxxxxxxxxxx

# URL del Backend (para construir enlaces de verificación)
BACKEND_URL=http://localhost:5000

# EmailJS Service
# Obtén estas claves desde tu dashboard de EmailJS
EMAILJS_SERVICE_ID=tu_service_id
EMAILJS_TEMPLATE_ID=tu_template_id
EMAILJS_PUBLIC_KEY=tu_public_key
EMAILJS_PRIVATE_KEY=tu_private_key

# Mapbox API Key
# Obtén esta clave desde tu dashboard de Mapbox
MAPBOX_API_KEY=tu_mapbox_api_key_aqui